const links = [
  {
    fileName: "github.svg",
    urlTo:"https://github.com/JaviDevp/JaviDevp",
    alt: "github-icon",
  },
  {
    fileName: "linkedin.svg",
    urlTo:"https://www.linkedin.com/in/javier-vidal-dev/",
    alt: "linkedin.svg",
  },
  /* {
