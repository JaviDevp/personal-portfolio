    name: "HTML",
    urlIcon: "html.svg",
    alt: "Html icon"
  },
  {
    name: "CSS",
    urlIcon: "css.svg",
    alt: "Css icon"
  },
  {
    name: "JavaScript",
    urlIcon: "javascript.svg",
    alt: "JavaScript icon"
  },
  {
    name: "React Js",
    urlIcon: "react.svg",
    alt: "React Js icon"
  },
  {
    name: "Laravel",
    urlIcon: "laravel.svg",
    alt: "Laravel icon"
  },
  {
    name: "Python",
    urlIcon: "python.svg",
    alt: "Python icon"
  },
  {
    name: "Node Js",
    urlIcon: "node.svg",
    alt: "Node js icon"
  },
  {
    name: "Flutter",
    urlIcon: "flutter.svg",
    alt: "Flutter icon"
  },
  {
    name: "Postgres",
