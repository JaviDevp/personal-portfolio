    alt: "Next Js icon"
  },
  {
    name: "Git",
    urlIcon: "git.svg",
    alt: "Git icon"
  },
]
---

<section class="w-full mt-3">
  <h2>Habilidades</h2>
  <div class="grid grid-rows-2 grid-flow-col gap-4 ">
    {
      skillList.map(skill => (
        <SkillCard name={skill.name} src={skill.urlIcon} alt={skill.alt}/>
      ))
    }
  </div>
</section>