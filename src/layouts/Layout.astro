---
interface Props {
  title: string;
}

const { title } = Astro.props;


---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <main class="flex flex-col items-center justify-center">
      <slot />
      <div class="absolute inset-0 -z-10 overflow-hidden">
        <div class="shape1  bg-circleGradient " ></div>
        <div class="shape2  bg-circleGradient hidden lg:flex" ></div>
        <div class="shape3  bg-circleGradient hidden lg:flex" ></div>
        <div class="shape4  bg-circleGradient" ></div>
        <div class="shape5  bg-smallCircleGradient" ></div>
        <div class="shape6  bg-smallCircleGradient" ></div>
      </div>
    </main>
  </body>
</html>
<style is:global>
  :root {
    --backgroundColor: #0d131f;
    --accent: 136, 58, 234;
    --accent-light: 224, 204, 250;
    --accent-dark: 49, 10, 101;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      rgb(var(--accent-light)) 30%,
      white 60%
    );
  }
  .shape1 {
    position: fixed;
    left: -50px;
    top: -200px;
    /* top: -300px; */
    width: 500px;
    height: 500px;
    border-radius: 100%;
    transform: translate(0%, 0%);
    filter:blur(100px);
    animation: leftCircles 3s;
  }
  .shape2 {
    position: fixed;
    bottom: 0;
    width: 500px;
    height: 500px;
    border-radius: 100%;
    transform: translate(-50%, 50%);
    filter:blur(100px);
  }
  .shape3 {
    position: fixed;
    right: 0;
    width: 400px;
    height: 400px;
    border-radius: 100%;
    transform: translate(50%, -50%);
    filter:blur(50px);
    opacity: 1;
  }
  .shape4 {
    position: fixed;
    right: 50px;
    bottom: -150px;
    width: 500px;
    height: 500px;
    border-radius: 100%;
    filter:blur(100px);
    animation: rightCircles 3s;
  }
  .shape5 {
    position: absolute;
    left: 30%;
    top: 60%;
    width: 50px;
    height: 50px;
    border-radius: 100%;
    filter:blur(70px);
  }
  .shape6 {
    position: absolute;
    left: 60%;
    top: 20%;
    width: 50px;
    height: 50px;
    border-radius: 100%;
    transform: translate(0%, 50%);
    filter:blur(70px);
  }

  @keyframes leftCircles{
    0%{left: -200px; top: -350px;}
    100%{left: -50px; top: -200px;}
  }

  @keyframes rightCircles{
    0%{right: -150px; bottom: -150px;}
    100%{right: 50px; bottom: -150px;}
  }

  @media (width <= 50em ) {
  .shape1 {
    width: 400px;
    height: 400px;
    left: -50px;
    top: -100px;
  }
  .shape4 {
    width: 400px;
    height: 400px;
  }

  .shape5 {
    width: 50px;
    height: 50px;
    left: 20%;
    top: 60%;
    filter:blur(70px);
  }

  .shape6 {
    width: 50px;
    height: 50px;
    left: 70%;
    top: 20%;
    filter:blur(70px);
  }

  @keyframes leftCircles{
    0%{left: -200px; top: -350px;}
    100%{left: -50px; top: -100px;}
  }

}

  html {
    font-family: system-ui, sans-serif;
    background: var(--backgroundColor);
  }
  main {
    margin: auto;
    padding: 0rem 1rem;
    width: 1028px;
    max-width: calc(100% - 2rem);
    color: white;
    font-size: 20px;
  }
</style>